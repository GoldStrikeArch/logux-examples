{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "import-normalize"
        ]
      }
    ],
    "selector-no-vendor-prefix": [
      true,
      {
        "ignoreSelectors": [
          "::-webkit-input-placeholder",
          "/-moz-.*/"
        ]
      }
    ]
  }
}
